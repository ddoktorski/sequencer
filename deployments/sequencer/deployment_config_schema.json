{
  "type": "object",
  "properties": {
    "chain_id": {"type": "string", "minLength": 1},
    "image": {"type": "string", "minLength": 1},
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string", "minLength": 1},
          "config_path": {"type": "string", "minLength": 1},
          "ingress": {"type": "boolean"},
          "replicas": {"type": "integer", "minimum": 1},
          "autoscale": {"type": "boolean"},
          "storage": {
            "anyOf": [
              {"type": "integer", "minimum": 1},
              {"type": "null"}
            ]
          }
        },
        "required": ["name", "config_path", "ingress", "replicas", "autoscale", "storage"]
      }
    }
  },
  "required": ["chain_id", "image", "services"]
}
